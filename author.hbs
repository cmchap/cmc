{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! Everything inside the #author tags pulls data from the author }}
{{#author}}
    <header class="main-header js-blog-bg-image {{#if cover}}" style="background-image: url({{cover}}){{else}}no-cover{{/if}}">
        <div class="main-header-content">
            {{#if image}}
                <div class="author-logo-container">
                    <img src="{{image}}" alt="{{name}}">
                </div>
            {{/if}}
            <h1 class="author-title page-title js-bg-check">
                <span><a href="{{url}}">{{name}}</a></span>
            </h1>
            {{#if bio}}
                <p class="author-bio js-bg-check">
                    {{bio}}
                </p>
            {{/if}}
            <a href="{{url}}rss/" class="subscribe author-stats js-bg-check">
                {{plural ../pagination.total empty='No posts yet' singular='% post' plural='% posts'}}<i class="fa fa-rss"></i>
            </a>
        </div>
    </header>
{{/author}}

<main class="content author-template" role="main">
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
</main>
