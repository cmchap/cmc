{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    <header class="post-header post-meta">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
    </header>
    <footer class="post-meta">
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMM Do, YYYY"}}</time>
{{!--         {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="Author image" nopin="nopin" />{{/if}}
        {{author}} --}}
        {{!-- {{tags prefix=" in "}} --}}
    </footer>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page - this is a custom pagination partial}}
{{pagination}}
