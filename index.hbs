{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<header class="main-header js-blog-bg-image {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <div class="main-header-content">
        {{#if @blog.logo}}
        <div class="post-logo-container">
            <a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>
        </div>
        {{/if}}
        <h1 class="page-title js-bg-check">Cory Chapman</h1>
        <h4 class="page-description js-bg-check"><span>{{@blog.description}}</span></h4>
    </div>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content home-template" role="main">
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
</main>

<section class="index-author-info">
    <div class="index-author-info-wrapper">
        {{#if posts.[0].author.image}}
            <img src="{{posts.[0].author.image}}" class="post-author-avatar" alt="{{posts.[0].author.name}}">
        {{/if}}
        <div class="author-info-text">
        {{#if posts.[0].author.name}}
                <h1><a href="{{@blog.url}}/about-me" class="author-link-name">{{posts.[0].author.name}}</a></h1>
            {{/if}}
            {{#if posts.[0].author.website}}
                <p><a href="{{posts.[0].author.website}}" class="author-website">{{posts.[0].author.website}}</a></p>
            {{/if}}
            {{#if posts.[0].author.bio}}
                <p>{{posts.[0].author.bio}}</p>
            {{/if}}
        </div>
    </div>
</section>
